<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<VBox prefHeight="475.0" prefWidth="750.0" spacing="10.0" style="-fx-border-radius: 0; -fx-border-width: 0; -fx-background-radius: 0;" styleClass="box"
      stylesheets="@style.css" xmlns="http://javafx.com/javafx/21.0.3-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="root">
    <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Escape: A Storey" textAlignment="CENTER"
          style="-fx-font-style: italic; -fx-font-weight: 700; -fx-font-size: 24px;">
    </Text>
    <Label fx:id="welcomeText" text="Login" style="-fx-font-style: italic; -fx-font-weight: 700; -fx-font-size: 14px;">
    </Label>
    <AnchorPane maxHeight="78.0" maxWidth="250.0" minWidth="250.0" prefHeight="161.0">
        <TextField fx:id="usernameEntry" layoutY="9.0" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="160.0" promptText="Username"
                   style="-fx-alignment: center-left;" styleClass="box" stylesheets="@style.css" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0"
                   AnchorPane.topAnchor="0.0"/>
        <PasswordField fx:id="passwordEntry" layoutY="37.0" maxWidth="-Infinity" prefHeight="35.0" prefWidth="160.0" promptText="Password"
                       style="-fx-alignment: center-left;"
                       styleClass="box" stylesheets="@style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0" onAction="#tryAuth"/>
        <Button layoutX="216.0" layoutY="44.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="34.0" styleClass="box, logical-button" text="&#x2192;"
                AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    </AnchorPane>
    <HBox style="-fx-spacing: 0.4em; -fx-alignment: center; -fx-font-weight: 400; -fx-font-size: 10px" maxWidth="-Infinity">
        <Label style="-fx-font-style: italic" fx:id="promptAuthMode">
            New?
        </Label>
        <Label styleClass="logical-button" fx:id="toggleAuthMode" onMouseClicked="#toggleAuthMode">Create an account</Label>
    </HBox>
    <Label styleClass="error"/>
</VBox>
